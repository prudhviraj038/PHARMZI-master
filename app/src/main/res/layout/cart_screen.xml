<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d3d3d3">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">


            <ScrollView
                android:id="@+id/scrollView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:background="#ffffff"
                            android:scrollbars="none"
                            android:visibility="visible" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/st_subtotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sub Total" />

                            <TextView
                                android:id="@+id/textView26"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/sub_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="KD 21.000" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/st_delivery_charges"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Delivery Charges" />

                            <TextView
                                android:id="@+id/textView28"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/dc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+ KD 1.000" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#616161"
                            android:orientation="vertical"></LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/st_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total"
                                android:textColor="#616161"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView31"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30 KD"
                                android:textColor="#616161"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/coupon"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/line3"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/coupon_text"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/rectangle"
                                android:hint="Enter Promo Code"
                                android:inputType="text"
                                android:paddingLeft="10dp"
                                android:textColor="#000"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/check_btn"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="5dp"
                                android:background="#000000"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="Check"
                                android:textColor="#ffffff" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/line4"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/coupon"
                            android:layout_marginTop="5dp"
                            android:background="#d2d2d2"
                            android:orientation="vertical"></LinearLayout>

                        <LinearLayout
                            android:id="@+id/discount"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/line4"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView22"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:inputType="text"
                                android:paddingLeft="10dp"
                                android:text="Discount"
                                android:textColor="#000"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/discount_value"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/coupon"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:gravity="right|center_vertical"
                                android:padding="5dp"
                                android:textColor="#000" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/line5"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/discount"
                            android:layout_marginTop="5dp"
                            android:background="#d2d2d2"
                            android:orientation="vertical"></LinearLayout>


                        <LinearLayout
                            android:id="@+id/after_discount"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/line5"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView23"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:inputType="text"
                                android:paddingLeft="10dp"
                                android:text="Total Discount Price"
                                android:textColor="#000"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/total_discount_price"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:gravity="right|center_vertical"
                                android:textColor="#000" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/st_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="* Delivery charges may vary during checkout"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:id="@+id/check_out_lll"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/blue_rounded_corners_full"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/check_out_tvv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginRight="25dp"
                                android:text="CheckOut"
                                android:textColor="#ffffff"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/continue_shopping_ll"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="25dp"
                            android:background="@drawable/blue_rounded_corners_full"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/cs_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginRight="25dp"
                                android:layout_marginTop="10dp"
                                android:text="Continue Shopping"
                                android:textColor="#ffffff"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </ScrollView>


          <LinearLayout
              android:id="@+id/no_cart"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingLeft="40dp"
              android:paddingRight="40dp"
              android:visibility="gone">

              <ImageView
                  android:id="@+id/imageView14"
                  android:layout_width="90dp"
                  android:layout_height="90dp"
                  android:layout_marginBottom="10dp"
                  android:src="@drawable/sad" />

              <TextView
                  android:id="@+id/textView34"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Uh-Oh!"
                  android:textColor="#616161"
                  android:textSize="20sp"
                  android:textStyle="bold" />

              <TextView
                  android:id="@+id/textView35"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:gravity="center"
                  android:text="Your Cart is currently empty " />

              <LinearLayout
                  android:id="@+id/browse_btn"
                  android:layout_width="match_parent"
                  android:layout_height="40dp"
                  android:layout_marginTop="20dp"
                  android:background="@drawable/blue_rounded_corners_full"
                  android:gravity="center"
                  android:orientation="vertical">

                  <TextView
                      android:id="@+id/textView36"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="10dp"
                      android:layout_marginLeft="25dp"
                      android:layout_marginRight="25dp"
                      android:layout_marginTop="10dp"
                      android:text="Browse Products"
                      android:textColor="#ffffff"
                      android:textSize="15sp" />
              </LinearLayout>

          </LinearLayout>

          <LinearLayout
              android:id="@+id/checkout_option"
              android:layout_width="match_parent"
              android:layout_height="300dp"
              android:layout_alignParentBottom="true"
              android:background="@color/background"
              android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
              android:orientation="vertical"
              android:paddingBottom="2dp"
              android:paddingLeft="2dp"
              android:paddingRight="2dp"
              android:visibility="gone">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@drawable/popup_blue_rounded_corners"
                  android:orientation="vertical">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                      android:orientation="horizontal"
                      android:paddingBottom="10dp"
                      android:paddingLeft="15dp"
                      android:paddingRight="15dp"
                      android:paddingTop="10dp">

                      <TextView
                          android:id="@+id/done_btn"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="#00aabb" />

                      <TextView
                          android:id="@+id/textView63"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_weight="1.0"
                          android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" />

                      <TextView
                          android:id="@+id/cancel_btn"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Cancel"
                          android:textColor="#00aabb" />
                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:background="#d2d2d2"
                      android:orientation="vertical" />

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_margin="40dp"
                      android:background="#ffffff"
                      android:orientation="vertical"
                      android:padding="5dp">

                      <TextView
                          android:id="@+id/login_btn"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginBottom="10dp"
                          android:gravity="center_vertical|center_horizontal"
                          android:text="Login/Register"
                          android:textColor="@color/textcolor"
                          android:textSize="15dp"
                          android:visibility="visible" />

                      <TextView
                          android:id="@+id/guest_btn"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                          android:gravity="center_vertical|center_horizontal"
                          android:text="Guest Checkout"
                          android:textColor="@color/textcolor"
                          android:textSize="15dp"
                          android:visibility="visible" />
                  </LinearLayout>
              </LinearLayout>


          </LinearLayout>


      </RelativeLayout>


    </LinearLayout>

</LinearLayout>

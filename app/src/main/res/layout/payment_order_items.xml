<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_width="match_parent"
    app:layout_height="wrap_content"
    app:orientation="vertical"
    tools:ignore="NamespaceTypo">

    <android.support.v7.widget.CardView
        app:layout_width="match_parent"
        app:layout_height="wrap_content">

        <RelativeLayout
            app:layout_width="match_parent"
            app:layout_height="wrap_content">

            <LinearLayout
                app:id="@+id/main"
                app:layout_width="match_parent"
                app:layout_height="wrap_content"
                app:orientation="horizontal">

                <ImageView
                    app:id="@+id/product_image"
                    app:layout_width="130dp"
                    app:layout_height="130dp"
                    app:adjustViewBounds="true"
                    app:padding="10dp"
                    app:src="@drawable/shop" />

                <LinearLayout
                    app:layout_width="match_parent"
                    app:layout_height="match_parent"
                    app:layout_weight="1"
                    app:orientation="vertical"
                    app:paddingLeft="10dp"
                    app:paddingTop="10dp">

                    <LinearLayout
                        app:layout_width="match_parent"
                        app:layout_height="wrap_content"
                        app:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
                        app:orientation="horizontal">

                        <TextView
                            app:id="@+id/pro_title"
                            app:layout_width="wrap_content"
                            app:layout_height="wrap_content"
                            app:singleLine="true"
                            app:text="Madam Flora 4"
                            app:textColor="#000" />
                    </LinearLayout>

                    <TextView
                        app:id="@+id/textView18"
                        app:layout_width="match_parent"
                        app:layout_height="5dp" />

                    <LinearLayout
                        app:layout_width="match_parent"
                        app:layout_height="wrap_content"
                        app:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
                        app:orientation="horizontal">

                        <TextView
                            app:id="@+id/phar_title"
                            app:layout_width="wrap_content"
                            app:layout_height="wrap_content"
                            app:text="Arya" />
                    </LinearLayout>

                    <TextView
                        app:id="@+id/textView20"
                        app:layout_width="match_parent"
                        app:layout_height="5dp" />

                    <LinearLayout
                        app:id="@+id/date"
                        app:layout_width="match_parent"
                        app:layout_height="wrap_content"
                        app:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
                        app:orientation="horizontal">

                        <ImageView
                            app:id="@+id/select_date"
                            app:layout_width="20dp"
                            app:layout_height="20dp"
                            app:background="@drawable/calendar" />

                        <TextView
                            app:id="@+id/date_option"
                            app:layout_width="match_parent"
                            app:layout_height="match_parent"
                            app:layout_marginLeft="5dp"
                            app:layout_marginRight="5dp"
                            app:gravity="top|bottom|center_vertical|fill_vertical|center|fill" />
                    </LinearLayout>

                    <LinearLayout
                        app:id="@id/time"
                        app:layout_width="match_parent"
                        app:layout_height="wrap_content"
                        app:layout_marginTop="5dp"
                        app:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
                        app:orientation="horizontal">

                        <ImageView
                            app:id="@+id/select_time"
                            app:layout_width="20dp"
                            app:layout_height="20dp"
                            app:background="@drawable/time" />

                        <TextView
                            app:id="@+id/time_option"
                            app:layout_width="wrap_content"
                            app:layout_height="wrap_content"
                            app:layout_marginLeft="5dp"
                            app:layout_marginRight="5dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    app:layout_width="wrap_content"
                    app:layout_height="match_parent"
                    app:layout_marginRight="5dp"
                    app:orientation="vertical">

                    <ImageView
                        app:id="@+id/remove"
                        app:layout_width="20dp"
                        app:layout_height="20dp"
                        app:layout_gravity="right"
                        app:layout_marginRight="10dp"
                        app:layout_marginTop="10dp"
                        app:background="@drawable/close"
                        app:padding="10dp"
                        app:tint="#000" />

                    <TextView
                        app:layout_width="wrap_content"
                        app:layout_height="10dp" />

                    <TextView
                        app:id="@+id/price"
                        app:layout_width="wrap_content"
                        app:layout_height="wrap_content"
                        app:layout_marginLeft="5dp"
                        app:layout_marginRight="5dp"
                        app:text="KWD 22.000"
                        app:textColor="#000" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                app:id="@+id/addresses"
                app:layout_width="match_parent"
                app:layout_height="wrap_content"
                app:layout_below="@+id/main"
                app:layout_marginBottom="10dp"
                app:layout_marginLeft="10dp"
                app:layout_marginRight="10dp"
                app:orientation="vertical">

                <LinearLayout
                    app:layout_width="match_parent"
                    app:layout_height="match_parent"
                    app:orientation="horizontal">

                    <ImageView
                        app:layout_width="40dp"
                        app:layout_height="40dp"
                        app:padding="8dp"
                        app:src="@drawable/building" />

                    <LinearLayout
                        app:layout_width="match_parent"
                        app:layout_height="wrap_content"
                        app:orientation="vertical">

                        <LinearLayout
                            app:layout_width="match_parent"
                            app:layout_height="wrap_content"
                            app:layout_marginLeft="10dp"
                            app:orientation="horizontal">

                            <TextView
                                app:id="@+id/area_title"
                                app:layout_width="wrap_content"
                                app:layout_height="match_parent"
                                app:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                                app:text="Dasma"
                                app:textColor="@color/languagecolor" />

                            <TextView
                                app:layout_width="5dp"
                                app:layout_height="match_parent"
                                app:layout_marginLeft="3dp"
                                app:layout_marginRight="5dp"
                                app:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                                app:text="/"
                                app:textColor="@color/languagecolor" />

                            <TextView
                                app:layout_width="wrap_content"
                                app:layout_height="match_parent"
                                app:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                                app:text="Block:"
                                app:textColor="@color/languagecolor" />

                            <TextView
                                app:id="@+id/block"
                                app:layout_width="wrap_content"
                                app:layout_height="match_parent"
                                app:layout_marginLeft="3dp"
                                app:layout_marginRight="5dp"
                                app:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                                app:text="Test"
                                app:textColor="@color/languagecolor" />

                            <TextView
                                app:layout_width="5dp"
                                app:layout_height="match_parent"
                                app:layout_marginRight="3dp"
                                app:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                                app:text="/"
                                app:textColor="@color/languagecolor" />

                            <TextView
                                app:layout_width="wrap_content"
                                app:layout_height="match_parent"
                                app:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                                app:text="Street:"
                                app:textColor="@color/languagecolor" />

                            <TextView
                                app:id="@+id/street"
                                app:layout_width="wrap_content"
                                app:layout_height="match_parent"
                                app:layout_marginLeft="3dp"
                                app:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                                app:text="Test"
                                app:textColor="@color/languagecolor" />

                            <TextView
                                app:layout_width="5dp"
                                app:layout_height="match_parent"
                                app:layout_marginLeft="4dp"
                                app:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                                app:text="/"
                                app:textColor="@color/languagecolor" />
                        </LinearLayout>

                        <LinearLayout
                            app:layout_width="match_parent"
                            app:layout_height="wrap_content"
                            app:layout_marginLeft="10dp"
                            app:orientation="horizontal">

                            <TextView
                                app:layout_width="wrap_content"
                                app:layout_height="match_parent"
                                app:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                                app:text="Avenue(Jaadah):"
                                app:textColor="@color/languagecolor" />

                            <TextView
                                app:id="@+id/jaddah"
                                app:layout_width="wrap_content"
                                app:layout_height="match_parent"
                                app:layout_marginLeft="3dp"
                                app:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                                app:text="Test"
                                app:textColor="@color/languagecolor" />

                            <TextView
                                app:layout_width="5dp"
                                app:layout_height="match_parent"
                                app:layout_marginLeft="4dp"
                                app:layout_marginRight="4dp"
                                app:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                                app:text="/"
                                app:textColor="@color/languagecolor" />

                            <TextView
                                app:layout_width="wrap_content"
                                app:layout_height="match_parent"
                                app:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                                app:text="Building:"
                                app:textColor="@color/languagecolor" />

                            <TextView
                                app:id="@+id/building"
                                app:layout_width="wrap_content"
                                app:layout_height="match_parent"
                                app:layout_marginLeft="3dp"
                                app:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                                app:text="Test"
                                app:textColor="@color/languagecolor" />

                            <TextView
                                app:layout_width="5dp"
                                app:layout_height="match_parent"
                                app:layout_marginLeft="4dp"
                                app:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                                app:text="/"
                                app:textColor="@color/languagecolor" />
                        </LinearLayout>

                        <LinearLayout
                            app:id="@+id/address"
                            app:layout_width="match_parent"
                            app:layout_height="wrap_content"
                            app:layout_marginLeft="10dp"
                            app:orientation="horizontal">

                            <TextView
                                app:layout_width="wrap_content"
                                app:layout_height="match_parent"
                                app:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                                app:text="Floor# :"
                                app:textColor="@color/languagecolor" />

                            <TextView
                                app:id="@+id/floor"
                                app:layout_width="wrap_content"
                                app:layout_height="match_parent"
                                app:layout_marginLeft="3dp"
                                app:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                                app:text="Test"
                                app:textColor="@color/languagecolor" />

                            <TextView
                                app:layout_width="5dp"
                                app:layout_height="match_parent"
                                app:layout_marginLeft="4dp"
                                app:layout_marginRight="4dp"
                                app:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                                app:text="/"
                                app:textColor="@color/languagecolor" />

                            <TextView
                                app:layout_width="wrap_content"
                                app:layout_height="match_parent"
                                app:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                                app:text="Appartment# :"
                                app:textColor="@color/languagecolor" />

                            <TextView
                                app:id="@+id/apartment"
                                app:layout_width="wrap_content"
                                app:layout_height="match_parent"
                                app:layout_marginLeft="3dp"
                                app:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                                app:text="Test"
                                app:textColor="@color/languagecolor" />

                            <TextView
                                app:layout_width="5dp"
                                app:layout_height="match_parent"
                                app:layout_marginLeft="4dp"
                                app:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                                app:text="/"
                                app:textColor="@color/languagecolor" />
                        </LinearLayout>

                        <LinearLayout
                            app:layout_width="match_parent"
                            app:layout_height="wrap_content"
                            app:layout_marginLeft="10dp"
                            app:orientation="horizontal">

                            <TextView
                                app:layout_width="wrap_content"
                                app:layout_height="match_parent"
                                app:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                                app:text="Extra Deatails:"
                                app:textColor="@color/languagecolor" />

                            <TextView
                                app:id="@+id/extra_details"
                                app:layout_width="wrap_content"
                                app:layout_height="match_parent"
                                app:layout_marginLeft="3dp"
                                app:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                                app:text="Test"
                                app:textColor="@color/languagecolor" />

                            <TextView
                                app:layout_width="5dp"
                                app:layout_height="match_parent"
                                app:layout_marginLeft="4dp"
                                app:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                                app:text="/"
                                app:textColor="@color/languagecolor" />
                        </LinearLayout>

                        <LinearLayout
                            app:layout_width="match_parent"
                            app:layout_height="match_parent"
                            app:layout_marginLeft="10dp"
                            app:orientation="horizontal">

                            <TextView
                                app:layout_width="wrap_content"
                                app:layout_height="match_parent"
                                app:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                                app:text="Recipient number:"
                                app:textColor="@color/languagecolor" />

                            <TextView
                                app:id="@+id/number"
                                app:layout_width="wrap_content"
                                app:layout_height="match_parent"
                                app:layout_marginLeft="3dp"
                                app:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                                app:text="Test"
                                app:textColor="@color/languagecolor" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                app:layout_width="match_parent"
                app:layout_height="40dp"
                app:layout_alignParentBottom="false"
                app:layout_below="@+id/addresses"
                app:layout_marginLeft="10dp"
                app:layout_marginRight="10dp"
                app:orientation="horizontal">

                <ImageView
                    app:layout_width="40dp"
                    app:layout_height="match_parent"
                    app:padding="10dp"
                    app:src="@drawable/msg" />

                <TextView
                    app:id="@id/message"
                    app:layout_width="match_parent"
                    app:layout_height="match_parent"
                    app:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                    app:paddingLeft="10dp"
                    app:text="Message"
                    app:textColor="@color/languagecolor" />
            </LinearLayout>
        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>
